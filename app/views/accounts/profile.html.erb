<div class="container">
   <div class="row">
      <div class="col-4">
         <%= profile_picture @account, 330 %>
      </div>
      <div class="col-8 text-left">
         <div class="row">
            <div class="col-10">
               <h1><%= @account.full_name %></h1>
               <%= link_to "Edit Profile", edit_account_registration_path, class: "btn btn-outline-secondary float-right" if can_edit_profile?(@account.id) %>
            </div>
         </div>

         <div class="row profile-stats">
            <div class="col-4">
               <%= @account.posts.count %> post
            </div>
            <div class="col-4">
               <%= @account.total_followers %> followers
            </div>
            <div class="col-4">
               <%= @account.total_following %> following
            </div>
         </div>

         <p><%= @account.full_name %></p>
         <%= simple_format @account.description %>
         <p><%= link_to @account.website if @account.website.present? %></p>
      </div>
   </div>
   <div class="row profile-posts">
         <% @posts.each do |post| %>
            <div class="col-4">
               <div class="inst-post post-square" style="background: url(<%= post.image.url %>) no-repeat center top">
                  <%= link_to post_path(post) do %>
                     <div class="post-stats">
                        <div class="inner">
                           <i class="fa fa-heart mr-1"></i><%= post.total_likes_count %>
                           <i class="fa fa-comment mr-1 ml-3"></i><%= post.total_comments_count %>
                        </div>
                     </div>
                  <% end %>
               </div>
            </div>
         <% end %>
   </div>
</div>

